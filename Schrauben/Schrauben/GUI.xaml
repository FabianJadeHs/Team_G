<UserControl x:Class="Schrauben.GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrauben"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Startfenster" Background="#FFD8FBFF" Margin="0,0,10,9.6">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="308*"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="537*"/>
            <ColumnDefinition Width="100*"/>

        </Grid.ColumnDefinitions>

        <Label x:Name="lbl_Logo" Grid.Row="0" Grid.Column="1" FontSize="48" HorizontalContentAlignment="Center">Schraubenhausen</Label>
        <Label x:Name="lbl_Begruessung" Content="Bei uns können Sie Ihre Schrauben konfigurieren!" Grid.Row="1" Grid.Column="1" FontSize="24" HorizontalContentAlignment="Center"/>
        <Button x:Name="btn_Konfigurieren" Content="Konfigurieren" Grid.Row="2" Grid.Column="2" Click="btn_Konfigurieren_Click"/>
        <Button x:Name="btn_Schliessen" Content="Schließen" Click="btn_Schliessen_Click" Grid.Row="2"/>

    </Grid>
</UserControl>

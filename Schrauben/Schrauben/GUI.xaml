<UserControl x:Class="Schrauben.GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrauben"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Startfenster" Background="#FFC8FFFC">
        <Label Content="Schraubenhause" HorizontalAlignment="Left" Height="99" Margin="10,10,0,0" VerticalAlignment="Top" Width="315" FontSize="36"/>
        <Label Content="Bei uns können Sie sich Schrauben konfigurieren!" HorizontalAlignment="Left" Height="68" Margin="10,109,0,0" VerticalAlignment="Top" Width="395" FontSize="16"/>
        <Button x:Name="Schließen" Content="Schließen" Margin="0,0,90,34" Click="Schließen_Click" FontSize="14" HorizontalAlignment="Right" Width="217" Height="58" VerticalAlignment="Bottom"/>
        <Button x:Name="Konfigurieren" Content="Konfigurieren" HorizontalAlignment="Left" Margin="90,0,0,34" Width="217" Height="58" VerticalAlignment="Bottom" FontSize="14"/>

    </Grid>
</UserControl>

<UserControl x:Class="Schrauben.GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrauben"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Startfenster" Background="#FFD8FBFF">
        <Label x:Name="lbl_Logo" Content="Schraubenhausen" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="76" Width="384" FontSize="36" RenderTransformOrigin="0.717,0.053"/>
        <Label x:Name="lbl_Begruessung" Content="Bei uns können Sie Ihre Schrauben konfigurieren!" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Height="45" Width="558" FontSize="20"/>
        <Button x:Name="btn_Konfigurieren" Content="Konfigurieren" HorizontalAlignment="Left" Margin="75,354,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="btn_Konfigurieren_Click" FontSize="16"/>
        <Button x:Name="btn_Schliessen" Content="Schließen" Margin="0,354,75,0" VerticalAlignment="Top" Height="50" FontSize="16" HorizontalAlignment="Right" Width="150" Click="btn_Schliessen_Click"/>

    </Grid>
</UserControl>
